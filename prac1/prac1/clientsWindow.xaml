<Window x:Class="prac1.clientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prac1"
        mc:Ignorable="d"
        Title="clientsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="clients"/>
        <WrapPanel Grid.Row="1">
            <TextBox x:Name="tbSampleA">Имя клиента</TextBox>
            <TextBox x:Name="tbSampleB">Фамилия клиента</TextBox>
            <TextBox x:Name="tbSampleC">Адрес клиента</TextBox>
            <TextBox x:Name="tbSampleD">Emailклиента</TextBox>
            <TextBox x:Name="tbSampleE">Номер телефона клиента</TextBox>
        </WrapPanel>
        <WrapPanel Grid.Row="2">
            <Button x:Name="btnAdd" Click="btnAdd_Click">Добавить</Button>
            <Button x:Name="btnDelete" Click="btnDelete_Click">Удалить</Button>
            <Button x:Name="btnUpdate" Click="btnUpdate_Click">Изменить</Button>
        </WrapPanel>
    </Grid>
</Window>
